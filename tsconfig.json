{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "services": ["src/services"],
      "services/*": ["src/services/*"],
      "lib": ["src/lib"],
      "lib/*": ["src/lib/*"],
      "db": ["src/services/db"],
      "types": ["./src/types"],
      "types/*": ["./src/types/*"],
      "ui": ["./src/ui"],
      "ui/*": ["./src/ui/*"]
    }
  },
  "include": ["src", "snapshots.js"]
}
